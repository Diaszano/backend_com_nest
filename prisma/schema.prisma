// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Pokemons {
  id     Int      @id @default(autoincrement())
  name   String   @unique
  height Int?
  images Image[]
}

model Image {
  id        Int      @id @default(autoincrement())
  pokemon   Pokemons @relation(fields: [pokemonId], references: [id])
  pokemonId Int
  url       String
}
